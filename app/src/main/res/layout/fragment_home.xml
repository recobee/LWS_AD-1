<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:weightSum="2"

    >

    <LinearLayout
        android:id="@+id/dashboard_add"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/snow"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.livingwordsolutions.technosoft.post_module_location.utils.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_pager" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_below="@id/dashboard_add"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/dash_buts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"

            >

            <TableRow>

                <ImageButton
                    android:id="@+id/dash1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:onClick="selectSet"
                    android:padding="@dimen/pad_main_sel"
                    android:scaleType="fitXY"
                    android:src="@drawable/post" />

                <ImageButton
                    android:id="@+id/dash2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:onClick="selectSet"
                    android:padding="@dimen/pad_main_sel"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search"

                    />

                <ImageButton
                    android:id="@+id/dash3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:onClick="selectSet"
                    android:padding="@dimen/pad_main_sel"
                    android:scaleType="fitXY"
                    android:src="@drawable/searchnearby" />

            </TableRow>

            <TableRow>

                <ImageButton
                    android:id="@+id/dash4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:onClick="selectSet"
                    android:padding="@dimen/pad_main_sel"
                    android:scaleType="fitXY"
                    android:src="@drawable/post_by_requirment" />

                <ImageButton
                    android:id="@+id/dash5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:onClick="selectSet"
                    android:padding="@dimen/pad_main_sel"
                    android:scaleType="fitXY"
                    android:src="@drawable/fav" />

                <ImageButton
                    android:id="@+id/dash6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dip"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:onClick="selectSet"
                    android:padding="@dimen/pad_main_sel"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact" />

            </TableRow>
        </TableLayout>

    </LinearLayout>


</LinearLayout>
