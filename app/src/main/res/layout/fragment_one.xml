<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sell_1"
                android:layout_width="@dimen/iconsize_myvizag"
                android:layout_height="@dimen/iconsize_myvizag"
                android:layout_margin="5dip"
                android:background="@drawable/btn_house"
                android:button="@null" />

            <RadioButton
                android:id="@+id/sell_2"
                android:layout_width="@dimen/iconsize_myvizag"
                android:layout_height="@dimen/iconsize_myvizag"
                android:layout_margin="5dip"
                android:background="@drawable/btn_appart"
                android:button="@null" />

            <RadioButton
                android:id="@+id/sell_3"
                android:layout_width="@dimen/iconsize_myvizag"
                android:layout_height="@dimen/iconsize_myvizag"
                android:layout_margin="5dip"
                android:background="@drawable/btn_shop"
                android:button="@null" />

            <RadioButton
                android:id="@+id/sell_4"
                android:layout_width="@dimen/iconsize_myvizag"
                android:layout_height="@dimen/iconsize_myvizag"
                android:layout_margin="5dip"
                android:background="@drawable/btn_construction"
                android:button="@null"

                />

            <RadioButton
                android:id="@+id/sell_5"
                android:layout_width="@dimen/iconsize_myvizag"
                android:layout_height="@dimen/iconsize_myvizag"
                android:layout_margin="5dip"
                android:background="@drawable/btn_land"
                android:button="@null"

                />

            <RadioButton
                android:id="@+id/sell_6"
                android:layout_width="@dimen/iconsize_myvizag"
                android:layout_height="@dimen/iconsize_myvizag"
                android:layout_margin="5dip"
                android:background="@drawable/btn_commercial"
                android:button="@null"

                />

        </RadioGroup>
    </HorizontalScrollView>



     <fragment
        android:layout_marginTop="50dip"
         android:layout_below="@+id/horizontalScrollView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/dgTabs"
         class="Forms.DGTabFragment"

         />

</RelativeLayout>